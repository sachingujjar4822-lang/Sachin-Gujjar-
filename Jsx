  ];

  const [current, setCurrent] = React.useState(0);
  const [score, setScore] = React.useState(0);
  const [finished, setFinished] = React.useState(false);
  const [answers, setAnswers] = React.useState([]);
  const [selectedOption, setSelectedOption] = React.useState(null);

  function handleAnswer(option) {
    setSelectedOption(option);
    const isCorrect = option === questions[current].answer;
    if (isCorrect) setScore(score + 1);

    setAnswers([
      ...answers,
      { question: questions[current].question, selected: option, correct: questions[current].answer }
    ]);

    setTimeout(() => {
      const next = current + 1;
      if (next < questions.length) {
        setCurrent(next);
        setSelectedOption(null);
      } else {
        setFinished(true);
      }
    }, 800);
  }

  function restartQuiz() {
    setCurrent(0);
    setScore(0);
    setFinished(false);
    setAnswers([]);
    setSelectedOption(null);
  }

  return (
    <div className="container">
      <h1>Haryana GK Quiz</h1>

      {finished ? (
        <div>
          <h2>ЁЯОЙ Quiz рдкреВрд░рд╛ рд╣реБрдЖ</h2>
          <p>рдЖрдкрдХрд╛ рд╕реНрдХреЛрд░: {score} / {questions.length}</p>

          <h3>ЁЯУК рд╕реНрдХреЛрд░рдХрд╛рд░реНрдб:</h3>
          <ul style={{ listStyle: "none", padding: 0, textAlign: "left" }}>
            {answers.map((ans, index) => (
              <li key={index} style={{ margin: "10px 0" }}>
                <b>Q{index + 1}:</b> {ans.question} <br />
                рдЖрдкрдиреЗ рдЪреБрдирд╛:{" "}
                <span style={{ color: ans.selected === ans.correct ? "green" : "red", fontWeight: "bold" }}>
                  {ans.selected}
                </span>{" "}
                | рд╕рд╣реА рдЙрддреНрддрд░: <span style={{ color: "green" }}>{ans.correct}</span>
              </li>
            ))}
          </ul>

          <button onClick={restartQuiz}>
            ЁЯФД рджреЛрдмрд╛рд░рд╛ рд╢реБрд░реВ рдХрд░реЗрдВ
          </button>
        </div>
      ) : (
        <div>
          <h2>
            рдкреНрд░рд╢реНрди {current + 1}: {questions[current].question}
          </h2>
          <ul style={{ listStyle: "none", padding: 0 }}>
            {questions[current].options.map((option) => (
              <li key={option} style={{ margin: "10px 0" }}>
                <button
                  onClick={() => handleAnswer(option)}
                  disabled={selectedOption !== null}
                  className={
                    selectedOption === null
                      ? "normal"
                      : option === questions[current].answer
                      ? "correct"
                      : selectedOption === option
                      ? "wrong"
                      : "normal"
                  }
                >
                  {option}
                </button>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  );
}

ReactDOM.createRoot(document.getElementById("root")).render(<App />);
